<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".itemlist">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="520dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/space1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/txtInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Find these items:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtItem1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     sunglasses"
            android:textColor="@color/red"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtItem2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     hand"
            android:textColor="@color/red"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtItem3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     Rubik's Cube"
            android:textColor="@color/red"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtItem4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     shoe"
            android:textColor="@color/red"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtItem5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     chair"
            android:textColor="@color/red"
            android:textSize="18sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fadingEdge="none|horizontal"
            android:src="@drawable/ic_refresh"
            android:visibility="visible"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="normal"
            app:layout_anchorGravity="center_horizontal"
            app:rippleColor="@color/colorAccent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>